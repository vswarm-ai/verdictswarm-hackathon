# VerdictSwarm B2A API

# Redis
REDIS_URL=redis://localhost:6379/0

# API key validation
# Option A (recommended for MVP): comma-separated list of keys with optional tiers
# Format: tier:key (tier optional; defaults to "agent")
# Example: VS_API_KEYS=agent:vs_live_abc123,pro:vs_live_def456
VS_API_KEYS=

# Option B: signed keys (HMAC)
# Keys must look like: vs1_<tier>_<key_id>_<signature>
# signature = base64url(hmac_sha256(API_KEYS_SECRET, f"{tier}:{key_id}"))
API_KEYS_SECRET=

# Tier limits (calls/day)
VS_TIER_LIMIT_AGENT=1000
VS_TIER_LIMIT_PRO=10000
VS_TIER_LIMIT_ENTERPRISE=100000

# Upstream model/API keys used by ../src
GEMINI_API_KEY=
XAI_API_KEY=

# App
ENV=dev
LOG_LEVEL=info
